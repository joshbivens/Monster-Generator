html
  head
    title Monster Generator
    link(rel="stylesheet", href="dist/main.css")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/lodash.js/4.2.1/lodash.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/zepto/1.1.6/zepto.js")
  body
    .monster-card.monster-card-generate
      h1 MONSTA GENERATOR DELUXE!
      
      .platform
        img(src="dist/assets/img/pinky.png", id="img", alt="pinky the newbie")
      
      button Generate
      
      
    .monster-card.monster-card-wide.hidden
      .monster-card-stats
        h2 Stats:
        ul 
          li 
            p Name:
              span#name Pinky
          li 
            p Attack:
              span#attack 25 Magic
          li 
            p Health:
              span#hp 100
          li 
            p Amour:
              span#armour 50
          li 
            p Skill:
              span#skills Fire
          li 
            p Speed:
              span#speed 50
      img#monster-img
      .platform
      
      .title-card
        p#title a random monster has appeared!
      button Regenerate
       
      
    footer
      p Created by 
      a(href="http://www.twitter.com/thejoshbivens") @thejoshbivens
      span &
      a(href="http://www.twitter.com/iheartkode") @iheartkode 
      p Monster art provided by 
      a(href="http://www.twitter.com/Calciumtrice") @Calciumtrice
      
      
      
    script(src="dist/js/app.js")
